@model IList<Sharpify.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Shopify Products for @ViewBag.ShopName</h2>

@if (Model.Count == 0)
{
    <p>There are no products yet.</p>
} else {
    <table>
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var product in Model)
    {
            <tr>
                <td>@Html.ActionLink("Edit", "Edit",new { id = product.Id })</td>
                <td>@Html.ActionLink("Delete", "Delete",new { id = product.Id })</td>
                <td>@product.Title</td>
            </tr>
    }
        </tbody>
    </table>
}

<p>@Html.ActionLink("Add Product", "Create", "Products")</p>