@model IList<Sharpify.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Shopify Blogs</h2>

@if (Model.Count == 0)
{
    <p>There are no blogs yet.</p>
} else {
    <table>
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var blog in Model)
    {
            <tr>
                <td>@Html.ActionLink("Edit", "Edit",new { id = blog.Id })</td>
                <td>@Html.ActionLink("Delete", "Delete",new { id = blog.Id })</td>
                <td>@blog.Title</td>
            </tr>
    }
        </tbody>
    </table>
}

<p>@Html.ActionLink("Add Blog", "Create", "Blogs")</p>