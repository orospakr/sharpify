@{
    ViewBag.Title = "Edit";
    var title = ViewBag.blog.title;
    var id = ViewBag.blog.id;
}

<h2>Edit Blog</h2>


@using (Html.BeginForm(new { id = id }))
{
    @Html.AntiForgeryToken()

    <fieldset>
		<label for="title">Title</label>
		<input type="text" id="title" name="title" class="form-text" value="@title" />
	</fieldset>
    
	<fieldset class="form-actions">
		<input type="submit" value="Submit" />
	</fieldset>
}


<p>@Html.ActionLink("Back to List", "Index")</p>